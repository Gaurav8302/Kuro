# ======================================
# KURO AI - FRONTEND ENVIRONMENT CONFIG
# ======================================
# Copy this file to .env.local and fill in your actual values
# Never commit the .env.local file to version control!

# ==========================================
# CLERK AUTHENTICATION
# ==========================================
# Get your publishable key from: https://dashboard.clerk.com/
# Required for user authentication and session management
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here

# ==========================================
# BACKEND API CONFIGURATION
# ==========================================
# URL of your backend API
# Development: http://localhost:8000
# Production: https://your-backend.onrender.com
VITE_API_URL=http://localhost:8000

# ==========================================
# OPTIONAL: ADVANCED CONFIGURATION
# ==========================================

# Application Configuration
VITE_APP_NAME=Kuro AI
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_DEBUG=false
VITE_ENABLE_ANALYTICS=false

# API Configuration
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Chat Configuration
VITE_MAX_MESSAGE_LENGTH=2000
VITE_TYPING_INDICATOR_DELAY=1000

# UI Configuration
VITE_THEME=dark
VITE_ANIMATIONS_ENABLED=true

# ==========================================
# EXAMPLE VALUES (DO NOT USE IN PRODUCTION)
# ==========================================
# VITE_CLERK_PUBLISHABLE_KEY=pk_test_ABC123def456GHI789jkl012MNO345pqr678
# VITE_API_URL=https://kuro-ai-backend.onrender.com
