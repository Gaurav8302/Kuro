# ==============================================
# FRONTEND ENVIRONMENT (.env in frontend folder)
# ==============================================

# Clerk Authentication (Get from clerk.com dashboard)
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key-here

# Backend API URL
# Local development: http://localhost:8000
# Production: https://your-backend-app.onrender.com
VITE_API_URL=http://localhost:8000

# ==============================================
# BACKEND ENVIRONMENT (.env in backend folder)
# ==============================================

# Database Connections (Required)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/chatbot?retryWrites=true&w=majority
PINECONE_API_KEY=pcsk_your-pinecone-api-key-here
PINECONE_INDEX_NAME=my-chatbot-memory

# AI Service (Required)
GEMINI_API_KEY=AIza_your-google-gemini-api-key-here

# Authentication (Required)
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key-here

# Production Configuration
ENVIRONMENT=development
DEBUG=true
PORT=8000

# Frontend URL (for CORS in production)
FRONTEND_URL=https://your-frontend-app.vercel.app

# ==============================================
# SETUP INSTRUCTIONS
# ==============================================

# 1. Copy this file to both frontend/.env and backend/.env
# 2. Fill in your actual API keys and database URLs
# 3. For local development, use localhost URLs
# 4. For production, use your deployed URLs

# Get API Keys:
# - MongoDB: https://cloud.mongodb.com
# - Pinecone: https://pinecone.io
# - Google Gemini: https://makersuite.google.com/app/apikey
# - Clerk: https://clerk.com
GOOGLE_API_KEY=your_google_api_key_here
MONGO_URI=your_mongodb_connection_string_here
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX=your_pinecone_index_name_here
PINECONE_ENV=us-east-1

# Development Settings
DEBUG=true

