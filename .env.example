# Frontend Configuration
VITE_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
VITE_API_URL=http://localhost:8000

# Backend Configuration
# Environment Variables Template for Canvas Chat AI
# Copy this file to .env in your local development environment
# In Replit, add these as "Secrets" in the Tools menu

# ==============================================
# REQUIRED - Database & External Services
# ==============================================

# MongoDB Connection (Required)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/chatbot?retryWrites=true&w=majority

# Pinecone Vector Database (Required)
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_INDEX_NAME=my-chatbot-memory

# Google Gemini API (Required)
GEMINI_API_KEY=your-google-gemini-api-key-here

# Clerk Authentication (Required)
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key-here

# ==============================================
# FRONTEND CONFIGURATION (Optional)
# ==============================================

# API Backend URL (auto-detected in Replit)
# Local: http://localhost:8000
# Replit: Auto-configured based on REPL_SLUG and REPL_OWNER
VITE_API_URL=http://localhost:8000

# Clerk Frontend Configuration (for React app)
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key-here

# ==============================================
# DEPLOYMENT CONFIGURATION (Auto-set)
# ==============================================

# Environment Detection
ENVIRONMENT=development
DEBUG=false

# Replit-specific (auto-set by platform)
REPL_ID=auto-set-by-replit
REPL_SLUG=your-repl-name
REPL_OWNER=your-username

# Server Configuration
PORT=8000
HOST=0.0.0.0

# ==============================================
# SECURITY SETTINGS (Optional)
# ==============================================

# JWT Secret (optional - defaults to CLERK_SECRET_KEY)
JWT_SECRET=your-jwt-secret-for-additional-security

# API Rate Limiting (optional)
RATE_LIMIT_PER_MINUTE=60

# Logging Level (optional)
LOG_LEVEL=INFO
GOOGLE_API_KEY=your_google_api_key_here
MONGO_URI=your_mongodb_connection_string_here
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX=your_pinecone_index_name_here
PINECONE_ENV=us-east-1

# Development Settings
DEBUG=true

# Instructions:
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual API keys and configuration
# 3. Set DEBUG=false for production deployment
# 4. Never commit the .env file to version control
