# ======================================
# KURO AI - BACKEND ENVIRONMENT CONFIG
# ======================================
# Copy this file to .env and fill in your actual values
# Never commit the .env file to version control!

# ==========================================
# GOOGLE GEMINI AI CONFIGURATION
# ==========================================
# Get your API key from: https://makersuite.google.com/app/apikey
# Required for AI conversation capabilities
GEMINI_API_KEY=your_gemini_api_key_here

# ==========================================
# CLERK AUTHENTICATION
# ==========================================
# Get your keys from: https://dashboard.clerk.com/
# Required for user authentication and session management
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# ==========================================
# MONGODB DATABASE
# ==========================================
# MongoDB connection string for chat history and user data
# Examples:
# Local: mongodb://localhost:27017/kuro
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/kuro
MONGODB_URI=mongodb://localhost:27017/kuro

# ==========================================
# PINECONE VECTOR DATABASE
# ==========================================
# Get your keys from: https://www.pinecone.io/
# Required for AI memory and semantic search
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=kuro-memory

# ==========================================
# CORS & FRONTEND CONFIGURATION
# ==========================================
# URL of your frontend application for CORS settings
# Development: http://localhost:3000
# Production: https://your-domain.vercel.app
FRONTEND_URL=http://localhost:3000

# ==========================================
# PRODUCTION CONFIGURATION
# ==========================================
ENVIRONMENT=development
DEBUG=false
PORT=8000

# ==========================================
# OPTIONAL: ADVANCED CONFIGURATION
# ==========================================

# Server Configuration
HOST=0.0.0.0

# AI Configuration
MAX_RESPONSE_LENGTH=500
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000

# Memory Configuration  
MAX_MEMORY_ITEMS=100
MEMORY_SIMILARITY_THRESHOLD=0.7

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Session Configuration
SESSION_TIMEOUT_HOURS=24
MAX_SESSIONS_PER_USER=10

# Safety Configuration
ENABLE_SAFETY_FILTERS=true
ENABLE_CONTENT_MODERATION=true

# Development Features
ENABLE_API_DOCS=true

# Optional Security
JWT_SECRET=your-jwt-secret-for-additional-security

