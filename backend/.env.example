# Backend Environment Variables for Render
# Add these in your Render dashboard under Environment Variables

# Required - Database & External Services
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/chatbot?retryWrites=true&w=majority
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_INDEX_NAME=my-chatbot-memory
GEMINI_API_KEY=your-google-gemini-api-key-here
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key-here

# Production Configuration
ENVIRONMENT=production
DEBUG=false
PORT=10000

# Frontend URL (Auto-set by Render or manually configure)
FRONTEND_URL=https://your-frontend-app.vercel.app

# Optional Security Settings
JWT_SECRET=your-jwt-secret-for-additional-security
RATE_LIMIT_PER_MINUTE=60
